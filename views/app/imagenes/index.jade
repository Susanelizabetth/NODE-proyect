extends ../../layout.jade 
block contenido
    div(class="conteiner")
        h1 Imagenes
        for imagen in imagenes
            .white.border.tr.larger-padding 
                .row
                    .col-md-10
                        h2=imagen.title
                    .col-md-2 
                        a(href="/app/imagenes/#{imagen._id}/edit" class=("right-sapace")) Editar
                        form(action="/app/imagenes/#{imagen._id}?_method=DELETE" class="link" method="POST")
                            input(type="submit", value="Eliminar")
                        